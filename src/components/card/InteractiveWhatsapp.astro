---
interface Props {
	title: string;
	content: string;
    href: string;
}

const { title, content, href } = Astro.props;
---
<div class="col-lg-6">
                
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{title}</h5>
            <p>{content}</p>
            <a href={href}>Unete al grupo de whatsapp</a>
        </div>
    </div>

</div>